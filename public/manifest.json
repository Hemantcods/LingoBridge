{
  "commands": {
  "translate-selection": {
    "suggested_key": {
      "default": "Ctrl+Shift+E",
      "mac": "Command+Shift+E"
    },
    "description": "Translate the selected text"
  }
},
  "manifest_version": 3,
  "name": "Lingo Bridge",
  "description": "A new way to learn languages.",
  "version": "1.0.0",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content/index.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage", "activeTab", "contextMenus", "scripting", "tabs"]
  
}